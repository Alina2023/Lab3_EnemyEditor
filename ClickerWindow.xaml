<Window x:Class="Lab2_EnemyEditor.ClickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2_EnemyEditor"
        mc:Ignorable="d"
        Title="Clicker Game" Height="450" Width="700">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая часть: сцена -->
        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border BorderBrush="Black" BorderThickness="1" Width="220" Height="220" HorizontalAlignment="Center">
                <Image Name="imgEnemy" Width="220" Height="220" Stretch="Uniform" MouseLeftButtonDown="ImgEnemy_MouseLeftButtonDown"/>
            </Border>
            <TextBlock Name="txtEnemyHP" Text="HP: " FontSize="16" Margin="0,10,0,0" HorizontalAlignment="Center"/>
            <TextBlock Name="txtEnemyName" Text="Enemy" FontSize="14" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Правая панель: HUD игрока -->
        <StackPanel Grid.Column="1" Margin="12">
            <TextBlock Text="Player" FontWeight="Bold" FontSize="16"/>
            <TextBlock Text="Gold:"/>
            <TextBlock Name="txtPlayerGold" FontSize="14" Margin="0,0,0,6"/>
            <TextBlock Text="Damage:"/>
            <TextBlock Name="txtPlayerDamage" FontSize="14" Margin="0,0,0,6"/>
            <TextBlock Text="Level:"/>
            <TextBlock Name="txtPlayerLevel" FontSize="14" Margin="0,0,0,12"/>

            <Button Name="btnUpgrade" Content="Upgrade Damage" Click="BtnUpgrade_Click" Width="140" Height="36" Margin="0,8"/>
            <Button Name="btnNextEnemy" Content="Spawn Next" Click="BtnNextEnemy_Click" Width="140" Height="36" Margin="0,8"/>
            <Button Name="btnLoadTemplates" Content="Load templates (JSON)" Click="BtnLoadTemplates_Click" Width="200" Height="36" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
